@model Kapsch.Core.Gateway.Models.Payment.PaymentTerminalModel
@using Kapsch.ITS.Portal.Helpers

<script>
    $("#breadcrumbText").html("Administration / Payment Terminals / <b>Create Payment Terminal</b>");
</script>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Create Payment Terminal</h5>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("CreatePaymentTerminal", "Management", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, null, new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(model => model.UUID, new { @class = "control-label col-md-2" })
                                <div class="col-sm-4">
                                    @Html.EditorFor(model => model.UUID)
                                    @Html.ValidationMessageFor(model => model.UUID, null, new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.TerminalType, new { @class = "control-label col-md-2" })
                                <div class="col-sm-4">
                                    @Html.EnumDropDownListFor(model => model.TerminalType, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.TerminalType, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    @Html.ActionLink("Cancel", "PaymentTerminals", "Management", null, new { @class = "btn btn-white" })
                                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
