@model Kapsch.Core.Gateway.Models.Computer.ComputerConfigSettingModel
@using Kapsch.ITS.Portal.Helpers


<script>
    $("#breadcrumbText").html("Administration / Computers / <b>Create Computer Setting</b>");
</script>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Create Computer Setting</h5>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("CreateComputerSetting", "Management", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ComputerID)
                        <div class="form-group">
                            @Html.LabelFor(model => model.ComputerItemType, new { @class = "control-label col-md-2" })
                            <div class="col-sm-4">
                                @Html.EnumDropDownListFor(model => model.ComputerItemType, new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(model => model.ComputerItemType, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Value, new { @class = "control-label col-md-2" })
                            <div class="col-sm-4">
                                @Html.EditorFor(model => model.Value)
                                @Html.ValidationMessageFor(model => model.Value, null, new { @class = "text-danger" })
                            </div>
                        </div>
                
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                @Html.ActionLink("Cancel", "ViewComputer", "Management", new { id = Model.ComputerID }, new { @class = "btn btn-white" })
                                <input type="submit" value="Save Changes" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
