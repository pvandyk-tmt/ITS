<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddressCaptureFragmentEx">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_margin="1dp"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:id="@+id/rootView">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/search"
                android:id="@+id/searchButton"
                android:background="@color/buttonColor"
                android:onClick="searchCharges"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lineOnelinearLayout"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/text_fragment_address_capture_ex_address_line_one"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:id="@+id/addressLineOneTextView"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:inputType="textMultiLine"
                        android:maxLength="50"
                        android:id="@+id/addressLineOneEditText"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/text_fragment_address_capture_ex_address_line_two"
                        android:textStyle="bold"
                        android:id="@+id/lineTwoTextView"
                        android:gravity="right"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:inputType="textMultiLine"
                        android:maxLength="150"
                        android:id="@+id/addressLineTwoEditText"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/text_fragment_address_capture_ex_address_line_suburb"
                        android:textStyle="bold"
                        android:id="@+id/textView3"
                        android:gravity="right"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:inputType="textMultiLine"
                        android:maxLength="50"
                        android:id="@+id/suburbEditText"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/text_fragment_address_capture_ex_address_line_city"
                        android:textStyle="bold"
                        android:id="@+id/textView4"
                        android:gravity="right"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:maxLength="50"
                        android:inputType="textMultiLine"
                        android:id="@+id/cityEditText"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/text_fragment_address_capture_ex_address_line_code"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:id="@+id/codeTextView"/>/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:inputType="textMultiLine"
                        android:maxLength="5"
                        android:id="@+id/codeEditText"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>