<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriversLicenceFragmentEx">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_margin="1dp"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:id="@+id/rootView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/text_fragment_drivers_Licence_id_type"
                    android:textStyle="bold"
                    android:gravity="right"/>

                <Spinner
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/idTypeSpinner"
                    android:layout_column="1"/>

                <!--<TextView-->
                <!--android:layout_width="10dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_column="0"-->
                <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
                <!--android:text="*"-->
                <!--android:textStyle="bold"-->
                <!--android:gravity="right"-->
                <!--android:id="@+id/idTypeMandatoryTextView"/>-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/text_fragment_drivers_Licence_country"
                    android:textStyle="bold"
                    android:gravity="right"/>

                <!--<Spinner-->
                    <!--android:layout_width="190dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:spinnerMode="dropdown"-->
                    <!--android:gravity="left"-->
                    <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
                    <!--android:id="@+id/countrySpinner"-->
                    <!--android:layout_column="1"/>-->
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/countrySpinner"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/text_fragment_drivers_Licence_Id_Number"
                    android:textStyle="bold"
                    android:id="@+id/textView1"
                    android:gravity="right"/>

                <EditText
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:maxLength="18"
                    android:id="@+id/idNumberEditText"/>

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="*"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:id="@+id/idMandatoryTextView"/>

            <!--<Button-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:text="@string/vosi_enatis_query"-->
            <!--android:textAppearance="?android:textAppearanceLarge"-->
            <!--android:textStyle="bold"-->
            <!--android:layout_gravity="right"-->
            <!--android:textColor="@android:color/holo_red_light"-->
            <!--android:id="@+id/idSearchButton"/>-->

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/text_fragment_drivers_Licence_Initials"
                    android:textStyle="bold"
                    android:gravity="right"/>

                <EditText
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:maxLength="5"
                    android:id="@+id/initialsEditText"/>

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="*"
                    android:textStyle="bold"
                    android:id="@+id/initialsMandatoryTextView"
                    android:gravity="right"/>

                <!--<Button-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:text="@string/vosi_enatis_query"-->
                <!--android:textAppearance="?android:textAppearanceLarge"-->
                <!--android:textStyle="bold"-->
                <!--android:layout_gravity="right"-->
                <!--android:textColor="@android:color/holo_red_light"-->
                <!--android:id="@+id/idSearchButton"/>-->

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/text_fragment_drivers_Licence_First_Name"
                        android:textStyle="bold"
                        android:id="@+id/textView2"
                        android:gravity="right"/>

                    <EditText
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:maxLength="50"
                        android:id="@+id/firstNameEditText"/>

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="*"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:id="@+id/firstNameMandatoryTextView"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/text_fragment_drivers_Licence_Last_Name"
                        android:textStyle="bold"
                        android:id="@+id/textView3"
                        android:gravity="right"/>

                    <EditText
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:maxLength="50"
                        android:id="@+id/lastNameEditText"/>

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="*"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:id="@+id/lastNameMandatoryTextView"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/text_fragment_drivers_Licence_Email"
                        android:textStyle="bold"
                        android:id="@+id/textView4"
                        android:gravity="right"/>

                    <EditText
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/emailEditText"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/text_fragment_drivers_Licence_Occupation"
                        android:textStyle="bold"
                        android:id="@+id/textView5"
                        android:gravity="right"/>

                    <EditText
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:maxLength="50"
                        android:id="@+id/occupationEditText"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/text_fragment_drivers_Licence_Mobile_Number"
                        android:textStyle="bold"
                        android:id="@+id/textView6"
                        android:gravity="right"/>

                    <EditText
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:maxLength="50"
                        android:id="@+id/mobileNumberEditText"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/text_fragment_drivers_Licence_Gardian"
                        android:textStyle="bold"
                        android:id="@+id/textView8"
                        android:gravity="right"/>

                    <EditText
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:maxLength="50"
                        android:id="@+id/gaurdianEditText"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/text_fragment_drivers_Licence_Gender"
                        android:textStyle="bold"
                        android:id="@+id/textView7"
                        android:gravity="right"/>

                    <Spinner
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:gravity="left"
                        android:id="@+id/genderSpinner"
                        android:layout_column="1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:entries="@array/gender_array"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
